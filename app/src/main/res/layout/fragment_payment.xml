<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragments.CartFragment">


    <include
        android:id="@+id/include_tab"
        layout="@layout/header_menu" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="100dp"
                app:strokeColor="@color/orange"
                app:cardElevation="0dp"
                app:strokeWidth="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="04"
                    android:textColor="@color/orange"
                    android:textSize="38sp" />
            </com.google.android.material.card.MaterialCardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="معلومات الدغع"
                android:layout_marginVertical="10dp"
                android:textColor="@color/orange"
                android:textSize="23sp" />

            <ImageView
                android:id="@+id/item_pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:elevation="7dp"
                android:src="@drawable/visa"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/loginButton"
                android:layout_width="wrap_content"
                android:layout_height="47dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/orange"
                android:paddingHorizontal="30dp"
                android:text="حفظ ومتابعة"
                app:cornerRadius="7dp"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textFontWeight="400" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="100dp"
                app:strokeColor="@color/gray900"
                app:cardElevation="0dp"
                app:strokeWidth="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="05"
                    android:textColor="@color/gray900"
                    android:textSize="38sp" />
            </com.google.android.material.card.MaterialCardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="إتمام عملية الدفع"
                android:layout_marginVertical="10dp"
                android:textColor="@color/gray900"
                android:textSize="23sp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_marginHorizontal="25dp"
                android:orientation="horizontal"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="2dp"
                app:strokeColor="@color/gray900"
                android:layout_marginBottom="40dp"
                app:cardElevation="3dp"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginHorizontal="50dp"
                        android:text="تم التحقق من جميع التفاصيل
يمكنك الآن اتمام عملية الدفع "
                        android:textFontWeight="400"
                        android:textColor="@color/black"
                        android:textSize="20sp" />


                    <com.google.android.material.button.MaterialButton
                        android:layout_width="wrap_content"
                        android:layout_height="47dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:backgroundTint="@color/orange"
                        android:paddingHorizontal="30dp"
                        android:text="إتمام عملية الدفع"
                        app:cornerRadius="7dp"
                        android:textColor="@color/white"
                        android:textSize="17sp"
                        android:textFontWeight="400" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>



    </ScrollView>
</LinearLayout>