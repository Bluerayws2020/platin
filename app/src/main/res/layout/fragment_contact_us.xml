<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragments.ContactUsFragment">

        <include
            android:id="@+id/include_tab"
            layout="@layout/header_sub_category" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">


                <com.google.android.material.card.MaterialCardView
                    android:layout_width="270dp"
                    android:layout_height="185dp"
                    android:layout_marginTop="40sp"
                    android:gravity="center"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="0dp"
                    app:strokeColor="@color/gray500"
                    app:strokeWidth="2dp">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:gravity="center"
                            app:cardBackgroundColor="@color/orange"
                            app:cardCornerRadius="30dp"
                            app:cardElevation="0dp"
                            app:strokeColor="@color/orange"
                            app:strokeWidth="2dp">

                            <ImageView
                                android:id="@+id/image1"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:adjustViewBounds="true"
                                android:src="@drawable/ic_location" />


                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:id="@+id/category_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="20dp"
                            android:text="AL Muqabalain, AL Quds St.
BL408, Amman, Jordan"
                            android:textAlignment="center"
                            android:textColor="@color/gray"
                            android:textFontWeight="400"
                            android:textSize="21sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/include_tab" />


                    </LinearLayout>


                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="270dp"
                    android:layout_height="185dp"
                    android:layout_marginTop="10sp"
                    android:gravity="center"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="0dp"
                    app:strokeColor="@color/gray500"
                    app:strokeWidth="2dp">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:gravity="center"
                            app:cardBackgroundColor="@color/orange"
                            app:cardCornerRadius="30dp"
                            app:cardElevation="0dp"
                            app:strokeColor="@color/orange"
                            app:strokeWidth="2dp">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:adjustViewBounds="true"
                                android:src="@drawable/ic_phone" />


                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="20dp"
                            android:text="00962 797 222 197\n
00962 797 222 187"
                            android:textAlignment="center"
                            android:textColor="@color/gray"
                            android:textFontWeight="400"
                            android:textSize="21sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/include_tab" />


                    </LinearLayout>


                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="270dp"
                    android:layout_height="185dp"
                    android:layout_marginTop="10sp"
                    android:gravity="center"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="0dp"
                    app:strokeColor="@color/gray500"
                    app:strokeWidth="2dp">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:gravity="center"
                            app:cardBackgroundColor="@color/orange"
                            app:cardCornerRadius="30dp"
                            app:cardElevation="0dp"
                            app:strokeColor="@color/orange"
                            app:strokeWidth="2dp">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:adjustViewBounds="true"
                                android:src="@drawable/ic_message" />


                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="20dp"
                            android:text="info@platin-imex.com"
                            android:textAlignment="center"
                            android:textColor="@color/gray"
                            android:textFontWeight="400"
                            android:textSize="21sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/include_tab" />


                    </LinearLayout>


                </com.google.android.material.card.MaterialCardView>


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="175dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/map" />

                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginHorizontal="25dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/edit_text_bg"
                    android:drawablePadding="10dp"
                    android:drawableTint="#BBBBBB"
                    android:hint="الاسم الكامل"
                    android:padding="10dp"
                    android:textColor="@color/gray"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginHorizontal="25dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edit_text_bg"
                    android:drawablePadding="10dp"
                    android:drawableTint="#BBBBBB"
                    android:hint="البريد الالكتروني"
                    android:padding="10dp"
                    android:textColor="@color/gray"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginHorizontal="25dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edit_text_bg"
                    android:drawablePadding="10dp"
                    android:drawableTint="#BBBBBB"
                    android:hint="رقم الهاتف"
                    android:padding="10dp"
                    android:textColor="@color/gray"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/subject"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginHorizontal="25dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edit_text_bg"
                    android:drawablePadding="10dp"
                    android:drawableTint="#BBBBBB"
                    android:hint="الموضوع"
                    android:padding="10dp"
                    android:textColor="@color/gray"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/describtion"
                    android:layout_width="match_parent"
                    android:layout_height="145dp"
                    android:layout_marginHorizontal="25dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edit_text_bg"
                    android:drawablePadding="10dp"
                    android:drawableTint="#BBBBBB"
                    android:gravity="top"
                    android:hint="الوصف"
                    android:padding="10dp"
                    android:textColor="@color/gray"
                    android:textSize="14dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/loginButton"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginHorizontal="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="40dp"
                    android:backgroundTint="@color/orange"
                    android:text="ارسل"
                    android:textColor="@color/white"
                    android:textFontWeight="400"
                    android:textSize="17sp" />

            </LinearLayout>

        </ScrollView>

</LinearLayout>